<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Time" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="MyEditTextStyle">
        <!--文本的颜色-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/blue</item>
        <item name="colorControlNormal">@color/blue</item>
        <item name="colorControlActivated">@color/orange</item>
    </style>


    <style name="radiobtn_style">
        <item name="android:textColor">@drawable/radiobtn_textcolor</item>
        <item name="android:background">@drawable/radiobtn_background</item>
        <item name="android:button">@null</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="record_fragment_left_radio_btn_style">
        <item name="android:textColor">@drawable/radiobtn_textcolor</item>
        <item name="android:background">@drawable/record_fg_left_radio_btn_style</item>
        <item name="android:button">@null</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="record_fragment_center_radio_btn_style">
        <item name="android:textColor">@drawable/radiobtn_textcolor</item>
        <item name="android:background">@drawable/record_fg_center_radio_btn_style</item>
        <item name="android:button">@null</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="record_fragment_right_radio_btn_style">
        <item name="android:textColor">@drawable/radiobtn_textcolor</item>
        <item name="android:background">@drawable/record_fg_right_radio_btn_style</item>
        <item name="android:button">@null</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="EditScreenTextInputLayoutStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlHighlight">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:textColorHint">@color/blue</item>
        <item name="hintTextColor">@color/blue</item>
    </style>


    <style name="CustomDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
    </style>

    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

</resources>