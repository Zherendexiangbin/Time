<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".TimerActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.mut_jaeryo.circletimer.CircleTimer
            android:layout_gravity="center"
            android:id="@+id/circle_timer"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:show_text="true"
            app:outline_color="#ff0000"
            app:isOutline="true"
            app:wheel_active_color="#ff0000"
            app:wheel_background_color="#ff0000"
            android:transitionName="fab"
            app:text_color="#ff0000" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/timer_start"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/start"/>
        <Button
            android:id="@+id/timer_stop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/stop"/>
        <Button
            android:id="@+id/timer_reset"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/restart"/>
    </LinearLayout>




</LinearLayout>