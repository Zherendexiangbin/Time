<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="15dp">
        <LinearLayout
            android:id="@+id/re_item_background_lin"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:scaleType="center">
            <RelativeLayout
                android:id="@+id/click_statistics"
                android:layout_gravity="center"
                android:gravity=""
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:paddingLeft="20dp">

                <net.onest.time.MyTextView
                    android:id="@+id/re_item_txt_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="待办事项"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:deleteLineWidth="1dp"
                    app:deleteLineColor="@color/black"
                    app:showDeleteLine="show" />
<!--                <TextView-->
<!--                    android:id="@+id/re_item_txt_name"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:maxLength="15"-->
<!--                    android:maxLines="1"-->
<!--                    android:text="待办事项"-->
<!--                    android:textSize="15dp"-->
<!--                    android:textStyle="bold"-->
<!--                    android:textColor="@color/white"/>-->
                <TextView
                    android:id="@+id/re_item_txt_time"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/re_item_txt_name"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="时间"/>
            </RelativeLayout>
            <Button
                android:layout_gravity="center"
                android:id="@+id/re_item_ry_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:text="开始"
                android:textSize="15dp"
                android:textStyle="bold"
                android:transitionName="fab"
                android:textColor="@color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>