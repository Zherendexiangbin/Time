<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2.5dp">

    <RelativeLayout
        android:id="@+id/left_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/left_card"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/left_time"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            app:cardCornerRadius="120dp">
            <ImageView
                android:id="@+id/img_left_header"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@mipmap/head" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/left_card"
            android:layout_below="@+id/left_user_name"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/chat_msg_frame_wheat">
            <TextView
                android:id="@+id/left_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <TextView
            android:id="@+id/left_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/left_card"
            android:layout_marginLeft="10dp"
            android:text="用户名"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/right_card"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:cardCornerRadius="120dp">
            <ImageView
                android:id="@+id/img_right_header"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@mipmap/head" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/right_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/right_card"
            android:text="用户名"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/right_card"
            android:layout_below="@+id/right_user_name"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/chat_msg_frame_ivory">
            <TextView
                android:id="@+id/right_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>