<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wheat"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="统计数据"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/trophy1" />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/menu1" />
        </LinearLayout>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradual_color_change_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/record_fragment_lin1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/record_fragment_shape_10dp_all_corners"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计专注"
                    android:textColor="#ff8c00"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="次数"
                            android:textStyle="bold"
                            android:textColor="#ffa07a" />

                        <TextView
                            android:id="@+id/tomato_times"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="0"
                            android:textColor="#ff7f50"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="时长"
                            android:textStyle="bold"
                            android:textColor="#ffa07a" />

                        <TextView
                            android:id="@+id/tomato_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="0"
                            android:textColor="#ff7f50"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="日均时长"
                            android:textStyle="bold"
                            android:textColor="#ffa07a" />

                        <TextView
                            android:id="@+id/avg_tomato_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="0"
                            android:textColor="#ff7f50"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/record_fragment_lin2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:background="@drawable/record_fragment_shape_10dp_all_corners"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当日专注"
                        android:textColor="#ff8c00"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/record_fragment_today_focus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="2024-04-29"
                        android:textColor="#ff8c00"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="次数"
                            android:textStyle="bold"
                            android:textColor="#ffa07a" />

                        <TextView
                            android:id="@+id/today_tomato_times"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="0"
                            android:textColor="#ff7f50"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="时长"
                            android:textStyle="bold"
                            android:textColor="#ffa07a" />

                        <TextView
                            android:id="@+id/today_tomato_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="0"
                            android:textColor="#ff7f50"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/layout_tomato_duration_ratio"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/record_fragment_shape_10dp_all_corners"
                    android:orientation="vertical"
                    android:padding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/focus_duration_ratio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="专注时长分布"
                            android:textColor="#ff8c00"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_gravity="center"
                            android:id="@+id/record_fragment_time_data_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="2024-04-29"
                            android:textColor="#ff8c00"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_below="@id/focus_duration_ratio"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/focus_duration_ratio_left"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/arrow_left" />

                        <Button
                            android:id="@+id/focus_duration_ratio_right"
                            android:layout_marginRight="8dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/arrow" />

                        <Button
                            android:id="@+id/focus_duration_ratio_share"
                            android:layout_gravity="center"
                            android:padding="0dp"
                            style="?attr/materialIconButtonStyle"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            app:icon="@mipmap/share"
                            app:iconTint="@color/black"
                            android:backgroundTint="@color/transparent"/>
                    </LinearLayout>
                </RelativeLayout>

                <RadioGroup
                    android:id="@+id/record_fragment_time_data"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="60dp"
                    android:background="@drawable/edge"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/record_fragment_time_data_day"
                        style="@style/record_fragment_left_radio_btn_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:gravity="center"
                        android:text="日"
                        android:textSize="15dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray" />

                    <RadioButton
                        android:id="@+id/record_fragment_time_data_week"
                        style="@style/record_fragment_center_radio_btn_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"
                        android:text="周"
                        android:textSize="15dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray" />

                    <RadioButton
                        android:id="@+id/record_fragment_time_data_month"
                        style="@style/record_fragment_right_radio_btn_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:gravity="center"
                        android:text="月"
                        android:textSize="15dp" />
                </RadioGroup>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:id="@+id/empty_data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:src="@drawable/empty_data"/>

                    </FrameLayout>
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/record_fragment_pie_chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                    android:id="@+id/layout_app_used_time"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/record_fragment_shape_10dp_all_corners"
                    android:orientation="vertical"
                    android:padding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="App前台使用时长分布"
                            android:textColor="#ff8c00"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/record_fragment_app_use_time_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="2024-04-29"
                            android:textColor="#ff8c00"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/app_used_time_share"
                            android:layout_gravity="center"
                            android:padding="0dp"
                            style="?attr/materialIconButtonStyle"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            app:icon="@mipmap/share"
                            app:iconTint="@color/black"
                            android:backgroundTint="@color/transparent"/>
                    </LinearLayout>
                </RelativeLayout>

                <com.github.mikephil.charting.charts.HorizontalBarChart
                    android:id="@+id/record_fragment_bar_chart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>


