<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="fab"
    tools:context=".TimerActivity">
    <Button
        android:id="@+id/alter_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/rotate_screen"/>

    <LinearLayout
        android:id="@+id/timer_background_lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <com.mut_jaeryo.circletimer.CircleTimer
            android:layout_gravity="center"
            android:id="@+id/circle_timer"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:show_text="true"
            app:outline_color="#FFFFFFFF"
            app:isOutline="true"
            app:wheel_active_color="#FFFFFFFF"
            app:wheel_background_color="#0000"
            app:text_color="#FFFFFFFF"
            app:wheel_size="@integer/material_motion_duration_medium_2"
            app:text_size="100dp" />
        <TextView
            android:id="@+id/timer_forward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:gravity="center"
            android:textSize="50dp"
            android:transitionName="fab"
            android:textStyle="bold"
            android:textColor="#FFFFFFFF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center">
            <Button
                android:id="@+id/timer_start"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/start"
                android:onClick="clickTimer"/>
            <Button
                android:id="@+id/timer_stop"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/stop"/>
            <Button
                android:id="@+id/timer_reset"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/restart"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/timer_text"
        android:layout_marginTop="15dp"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:textSize="18dp"
        android:layout_below="@+id/alter_btn" />

</RelativeLayout>